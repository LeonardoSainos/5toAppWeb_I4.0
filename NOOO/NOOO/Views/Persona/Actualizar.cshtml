@model NOOO.Models.Repositorio

@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html5>
    <header>
        <meta name="viewport" content="width=device-width" />
        <link href="~/bootstrap.min.css" rel="stylesheet" />

    </header>
    <body>
        <div>
            @{
                foreach (System.Data.DataRow dr in ViewBag.per.Rows)
                {
                    <form method="post">
                        <div class=" form-group">
                            <label class="col-sm-3 control-label no-padding-right">Nombre</label>
                            <div class="col-sm-9">
                                <input type="text" value="@dr["nombre"]" name="Nom" class="col-xs-10 col-sm-8" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class=" col-sm-10">
                                <input type="submit" values="Submit" class="btn btn-primary" />

                            </div>
                        </div>
                    </form>
                }
            }


        </div>
        @{
            if (TempData["msg"] != null)
            {
                <script>alert('@TempData["msg"]') </script>
            }
        }
    </body>
</html5>

<div>
    @Html.ActionLink("Regresar", "Mostrar_datos");
</div>